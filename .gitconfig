[include]
	path = ~/.env
[init]
	defaultBranch = main
[diff]
	colorMoved = default
#   guitool = gvimdiff
# 	tool = vimdiff
[merge]
	conflictstyle = diff3
#   tool = vimdiff
#   guitool = gvimdiff
[core]
	editor = hx
	pager  = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate  = true
[alias]
	hist = log --pretty=format:'%C(yellow)[%ad]%C(reset) %C(green)[%h]%C(reset) | %C(red)%s %C(bold red){{%an}}%C(reset) %C(blue)%d%C(reset)' --graph --date=short
